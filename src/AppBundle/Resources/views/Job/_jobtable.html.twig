<div class="content">
    <div id="jobs">
        {% for category, job_array in jobs %}
            <div class="category_design">
                <div class="category">
                    <h1>
                        <a href="/category/{{ category }}">{{ category }}</a>
                    </h1>
                </div>
                <table class="jobs">
                    <tbody>
                    {% for job in job_array %}
                        <tr class="odd">
                            <td class="location">
                                {{ job.location }}
                            </td>
                            <td class="position">
                                <a href="{{ url('app_job_get', {'id':job.id}) }}">{{ job.position }}</a>
                            </td>
                            <td class="company">
                                {{ job.company }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endfor %}
    </div>
</div>