{% extends "AdminBundle::base.html.twig" %}

{% block title %}Admin - Categories{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/app/css/job.css') }}">
{% endblock %}

{% block body %}
    <a href="{{ url('admin_category_new') }}">Add new</a>
<table id="job_form">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
            <td><a href="{{ url('admin_category_edit', {'id': category.id}) }}">edit</a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
